<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zscat.shop.dao.BannerDao">

	<select id="get" resultType="com.zscat.shop.domain.BannerDO">
		select `id`,`name`,`stat`,`img`,`storeid`,url from t_banner where id = #{value}
	</select>

	<select id="list" resultType="com.zscat.shop.domain.BannerDO">
		select `id`,`name`,`stat`,`img`,`storeid`,url from t_banner
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="name != null and name != ''"> and name = #{name} </if>
			     <if test="url != null and url != ''"> and url = #{url} </if>
		  		  <if test="stat != null and stat != ''"> and stat = #{stat} </if>
		  		  <if test="img != null and img != ''"> and img = #{img} </if>
		  		  <if test="storeid != null and storeid != ''"> and storeid = #{storeid} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from t_banner
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="name != null and name != ''"> and name = #{name} </if>
				  <if test="url != null and url != ''"> and url = #{url} </if>
		  		  <if test="stat != null and stat != ''"> and stat = #{stat} </if>
		  		  <if test="img != null and img != ''"> and img = #{img} </if>
		  		  <if test="storeid != null and storeid != ''"> and storeid = #{storeid} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.zscat.shop.domain.BannerDO" useGeneratedKeys="true" keyProperty="id">
		insert into t_banner
		(
			`name`, 
			`stat`, 
			`img`,
			url,
			`storeid`
		)
		values
		(
			#{name}, 
			#{stat}, 
			#{img},
			#{url},
			#{storeid}
		)
	</insert>
	 
	<update id="update" parameterType="com.zscat.shop.domain.BannerDO">
		update t_banner 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="url != null">`url` = #{url}, </if>
			<if test="stat != null">`stat` = #{stat}, </if>
			<if test="img != null">`img` = #{img}, </if>
			<if test="storeid != null">`storeid` = #{storeid}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from t_banner where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from t_banner where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>