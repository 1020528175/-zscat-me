	<select id="selectGoodsByFloorLimit" resultType="com.zscat.shop.domain.TGoodsDO">
		SELECT * from t_goods p LEFT JOIN t_floor_goods f
		on p.id=f.productid where f.floorid =#{id}
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

