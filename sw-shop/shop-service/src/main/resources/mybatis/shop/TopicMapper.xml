<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zscat.shop.dao.TopicDao">

	<select id="get" resultType="com.zscat.shop.domain.TopicDO">
		select `id`,`title`,`create_date`,`stat`,`clickhit`,`img`,`remark` from t_topic where id = #{value}
	</select>

	<select id="list" resultType="com.zscat.shop.domain.TopicDO">
		select `id`,`title`,`create_date`,`stat`,`clickhit`,`img`,`remark` from t_topic
		<where>
			<if test="id != null and id != ''"> and id = #{id} </if>
			<if test="title != null and title != ''"> and title = #{title} </if>
			<if test="createDate != null and createDate != ''"> and create_date = #{createDate} </if>
			<if test="stat != null and stat != ''"> and stat = #{stat} </if>
			<if test="clickhit != null and clickhit != ''"> and clickhit = #{clickhit} </if>
			<if test="img != null and img != ''"> and img = #{img} </if>
			<if test="remark != null and remark != ''"> and remark = #{remark} </if>
		</where>
		<choose>
			<when test="sort != null and sort.trim() != ''">
				order by ${sort} ${order}
			</when>
			<otherwise>
				order by id desc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

	<select id="count" resultType="int">
		select count(*) from t_topic
		<where>
			<if test="id != null and id != ''"> and id = #{id} </if>
			<if test="title != null and title != ''"> and title = #{title} </if>
			<if test="createDate != null and createDate != ''"> and create_date = #{createDate} </if>
			<if test="stat != null and stat != ''"> and stat = #{stat} </if>
			<if test="clickhit != null and clickhit != ''"> and clickhit = #{clickhit} </if>
			<if test="img != null and img != ''"> and img = #{img} </if>
			<if test="remark != null and remark != ''"> and remark = #{remark} </if>
		</where>
	</select>

	<insert id="save" parameterType="com.zscat.shop.domain.TopicDO" useGeneratedKeys="true" keyProperty="id">
		insert into t_topic
		(
		`title`,
		`create_date`,
		`stat`,
		`clickhit`,
		`img`,
		`remark`
		)
		values
		(
		#{title},
		#{createDate},
		#{stat},
		#{clickhit},
		#{img},
		#{remark}
		)
	</insert>

	<update id="update" parameterType="com.zscat.shop.domain.TopicDO">
		update t_topic
		<set>
			<if test="title != null">`title` = #{title}, </if>
			<if test="createDate != null">`create_date` = #{createDate}, </if>
			<if test="stat != null">`stat` = #{stat}, </if>
			<if test="clickhit != null">`clickhit` = #{clickhit}, </if>
			<if test="img != null">`img` = #{img}, </if>
			<if test="remark != null">`remark` = #{remark}</if>
		</set>
		where id = #{id}
	</update>

	<delete id="remove">
		delete from t_topic where id = #{value}
	</delete>

	<delete id="batchRemove">
		delete from t_topic where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>